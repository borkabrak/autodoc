<!doctype html> 
<html lang="en">
    <head>
        <meta charset="utf-8" />
        <link type="text/css" rel="stylesheet" href="didoc.css" />
        <link rel="stylesheet" type="text/css" href="http://fonts.googleapis.com/css?family=PT+Sans+Caption">
        <script type="text/javascript" src="../scripts/jquery-1.9.1.js"></script>
        <script type="text/javascript" src="didoc.js"></script>
        <title>DiTool Documentation</title>
    </head>
    <body>
        <div id='frame'>
            [% INCLUDE $header %]
            [% INCLUDE $navbar %]
            [% INCLUDE $menu %] 
            <div class='text-container' id="content">
            </div>
        </div>
    </body>
    <script type="text/javascript">

    $(function(){

        didoc = new Didoc($("#content"));
        var menu = $(".nav-menu");
        menu.css("display","none");

        // Ajax-y behaviour for local links
        $(document).on( 'click',
            'a:not([href^=http])',
            function(event){
                var url = event.currentTarget.pathname;
                didoc.go(url);
                history.pushState(null, null, url);
                event.preventDefault();
        });

        // Handle 'back' navigation
        $(window).on('popstate', function(){
            // Both initial pageload and the back button fire 'popstate' (on
            // Chrome and Safari, at least)
            didoc.go(
                '/didoc/' + 
                (location.pathname.split('/').pop() || 'homepage.html'));
        });


        // Collapse/expand menu
        $('.menu').on('click',
            function(event){ 
                if ($(event.currentTarget).hasClass("collapsed")) {
                    $(event.currentTarget).addClass("expanded");
                    $(event.currentTarget).removeClass("collapsed");
                    menu.slideDown(200); 
                } else {
                    $(event.currentTarget).addClass("collapsed");
                    $(event.currentTarget).removeClass("expanded");
                    menu.slideUp(200); 
                }
            }
        );

        $(document).on( 'click', '.header', function(event){
            location.href = '/didoc/';
        });

    });

    </script>
</html>
